{
    "projectId": "docify",
    "projectName": "Docify",
    "settings": {
        "services": {
            "account": true,
            "avatars": true,
            "databases": true,
            "locale": true,
            "health": true,
            "storage": true,
            "teams": true,
            "users": true,
            "sites": true,
            "functions": true,
            "graphql": true,
            "messaging": true
        },
        "auth": {
            "methods": {
                "jwt": true,
                "phone": true,
                "invites": true,
                "anonymous": true,
                "email-otp": true,
                "magic-url": true,
                "email-password": true,
                "oauth": {
                    "google": true,
                    "github": true
                }
            },
            "security": {
                "duration": 31536000,
                "limit": 0,
                "sessionsLimit": 10,
                "passwordHistory": 0,
                "passwordDictionary": false,
                "personalDataCheck": false,
                "sessionAlerts": false,
                "mockNumbers": []
            }
        }
    },
    "databases": [
        {
            "$id": "docify_db",
            "name": "Docify Database",
            "enabled": true
        }
    ],
    "collections": [
        {
            "$id": "documents_table",
            "$permissions": {
                "read": ["users", "role:all"],
                "write": ["user:$userId", "role:apps"],
                "delete": ["user:$userId"]
            },
            "documentSecurity": true
        }
    ],
    "functions": [
        {
            "$id": "llm-analyzer-python",
            "name": "LLM Analyzer Python",
            "runtime": "python-3.9",
            "path": "functions/llm-analyzer-python",
            "entrypoint": "src/main.py",
            "commands": {
                "build": "pip install -r requirements.txt"
            },
            "scopes": ["documents.read", "documents.write", "databases.read", "databases.write"],
            "vars": {
                "DATABASE_ID": "docify_db",
                "DOCUMENTS_COLLECTION_ID": "documents_table",
                "GEMINI_API_KEY": "${GEMINI_API_KEY}"
            },
            "events": ["databases.docify_db.collections.documents_table.documents.update"],
            "schedule": "",
            "timeout": 900
        },
        {
            "$id": "document-scraper-python",
            "name": "Document Scraper Python",
            "runtime": "python-3.12",
            "path": "functions/document-scraper-python",
            "entrypoint": "src/main.py",
            "commands": {
                "build": "pip install -r requirements.txt"
            },
            "scopes": ["documents.read", "documents.write", "databases.read", "databases.write"],
            "vars": {
                "DATABASE_ID": "docify_db",
                "DOCUMENTS_COLLECTION_ID": "documents_table",
                "MAX_PAGES_TO_CRAWL": "10"
            },
            "events": ["databases.docify_db.collections.documents_table.documents.create"],
            "schedule": "",
            "timeout": 900
        }
    ],
    "sites": [
        {
            "$id": "docify-website",
            "name": "Docify-website",
            "enabled": true,
            "logging": true,
            "framework": "sveltekit",
            "timeout": 30,
            "installCommand": "npm install",
            "buildCommand": "npm run build",
            "outputDirectory": "./build",
            "specification": "s-1vcpu-512mb",
            "buildRuntime": "node-22",
            "adapter": "ssr",
            "fallbackFile": "",
            "path": "sites/Docify-website"
        }
    ]
}